<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoXamarin.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determina se um número é par ou ímpar"
                   Scale="1.3"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="etValor" Keyboard="Numeric" Placeholder="Informe um número" />
            <Button x:Name="btnExecutar" Text="Executar" 
                    Clicked="btnExecutar_Clicked"/>
            <Label x:Name="lblResposta" Text=""
                   Scale="1.3"
                HorizontalOptions="CenterAndExpand" />
                
            </StackLayout>
    </ContentPage.Content>
</ContentPage>