<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoXamarin.ComprarCafe">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Compra de Café!" FontSize="Large" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
            <Image Source="cafe"/>
            <Label Text="Valor unitário" HorizontalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="-" HorizontalOptions="StartAndExpand"/>
                <Label Text="R$ 5,00"/>
                <Button Text="+" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
            <Label x:Name="qtde" Text="Quantidade: 0" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="Total" Text="Totatl: R$ 0,00" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>