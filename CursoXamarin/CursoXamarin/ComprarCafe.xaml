<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoXamarin.ComprarCafe">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Compra de Café!" FontSize="30" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" />
            <Image Source="cafe"/>
            <Label Text="Valor unitário" HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            <Label Text="R$ 5,00" HorizontalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="-" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"/>
                <Button Text="+" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"/>
            </StackLayout>
            <Label x:Name="lQtde" Text="Quantidade: 0" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="lTotal" Text="Totatl: R$ 0,00" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>